Description=Uvicorn Instance to serve {{ django_name }}
After=syslog.target

[Service]
ExecStart={{ django_env_path }}/bin/uvicorn {{ django_asgi_app_factory }} --host localhost --port 8080 --workers {{Â django_asgi_process_count }}
